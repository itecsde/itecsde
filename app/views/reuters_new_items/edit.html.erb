<% content_for :head do %>
	<%= render :partial => "header/header", :locals => {:element_active => 'resources', :current_layout => "application"} %>
	<%= render :partial => "header/subheader", :locals => {:section_title => 'editing_artwork', :actions => "artworks/form_actions"} %>
<% end %>

<% content_for :content do %>
	<%= form_for(@artwork, :html => { :class => "artwork_form" }) do |f_artwork| %>
		<div id="element_header">
			<%= render :partial => "generic_partials/ownership_group_small" , :locals => {:edition_mode => @edition_mode,:element => @artwork,:element_type=>"artwork"} %> 
			<hr />
			<div class="clear"></div>
		</div>
		<div id="content_container" class="artwork_container">
			<input type="hidden" id="edition_mode" value="on">
				<%= render :partial => "form" , :locals => {:artwork_form => f_artwork} %>
				<%= render :partial => "submit", :locals => {:artwork_form => f_artwork} %>			
		</div>			
		<span style="display:none" id="is_edition" data-value="true"></span>	
		
		<script src="/javascript/artworks_form.js"></script>
	<% end %>
<% end %>
