<li>
<% if @previous_action == "list" %>
	<%=link_to  "javascript: history.back();", :class => "back_icon has_tooltip" do %>
		<img src="/images/white_arrow_left.png" title="<%= t('back_to_home') %>"></img>
	<% end %>
<% else %>
	<%=link_to  events_path, :class => "back_icon has_tooltip" do %>
		<img src="/images/white_arrow_left.png" title="<%= t('back_to_home') %>"></img>
	<% end %>
<% end %>
</li>

<% if current_user != nil && ((@event.owner == current_user) or (@event.owner_type=="Group" && @event.owner.users.exists?(current_user)))%>
<li>
	<%=link_to edit_event_path(@event), :class => "has_tooltip" do %>
		<img src="/images/white_edit.png" title="<%= t('edit') %>"></img>
	<% end %>
</li>
<li>
	<%=link_to  @event, confirm: t('are_you_sure'), method: :delete, :class => "has_tooltip" do %>
		 <img src="/images/white_delete.png" title="<%= t('delete') %>"></img>
	<% end %>	
</li>
<% end %>

