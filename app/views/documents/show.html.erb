<% content_for :meta do %>
	<%= render :partial => "/generic_partials/meta", :locals => {:element => @document}%>
<% end %>

<% content_for :head do %>
	<%= render :partial => "header/header_document", :locals => {:element_active => 'resources', :current_layout => "application"} %>
	<%= render :partial => "header/subheader_participant", :locals => {:section_title => 'participants', :actions => "documents/document_actions"} %> 
	
<% end %>

<% content_for :content do %>

	<% if current_user != nil%>
		<%= render :partial => "generic_partials/header_show_resource", :locals => {:element => @document} %>	
		
	<% end %>
	
	<% if params[:user_id] == nil 	
    	 url = "/documents?page=" + params[:page] + "&repository=" + params[:repository] + "&section=" + params[:section]
    else     	
    	 url = "/documents?page=" + params[:page] + "&repository=" + params[:repository] + "&section=" + params[:section] + "&user_id=" + params[:user_id]
	end
    
    url = URI.encode(url) %> 
	
	<!-- <center><a href="<%= url %>"> <div class="icon_logo_back_documents"></div> </a></center> -->
	<br>
	
	<div id="content_container" class="book_container">
		<%= render "document" %>		
	</div> <!-- CONTENT -->
	
	<span style="display:none" id="is_edition" data-value="false"></span>	
	
	
	<script src="/javascript/books_form.js"></script>
<% end %>

