<% if @num_results == 0 %>
	<div class="no_results"><%= t('no_results')%></div>			
<% end %>

<% if current_user != nil && @articles.first_page? %>
	<% if current_layout == "popup" %>
	<a class="extract_box popup_new_activity_sequence_box new_extract_box" onclick="">+</a>
	<% else %>
	<%= link_to "+", new_article_path, html_options = {:class => "new_extract_box_fixed"} %>
	<% end %>
<% end %>

<% @articles.each do |article| %>
	<%= render :partial => "elements/element_fixed", :locals => {:element => article, :current_layout => current_layout} %>
<% end %>

<div class="clear"></div>

<div class= "paginate_controls active">
	<%= paginate @articles %>
</div>


