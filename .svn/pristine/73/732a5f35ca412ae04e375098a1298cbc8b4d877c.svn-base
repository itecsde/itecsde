<% content_for :meta do %>
	<%= render :partial => "/generic_partials/meta", :locals => {:element => @widget}%>
<% end %>

<% content_for :head do %>
	<%= render :partial => "header/header", :locals => {:element_active => 'resources', :current_layout => "application"} %>
	<%= render :partial => "header/subheader", :locals => {:section_title => 'widget', :actions => "widgets/widget_actions"} %>
<% end %>

<% content_for :content do %>

	<% if current_user != nil%>
		<%= render :partial => "generic_partials/header_show_resource", :locals => {:element => @widget} %>	
	<% end %>

	<div id="content_container" class="widget_container">
		<%= render "widget" %>
		<%= render :partial => "generic_partials/related_elements_same_type",:locals => {:related_title =>'related_widgets'} %>				
	</div> <!-- CONTENT -->
	<%= render :partial => "generic_partials/related_elements", :locals => {:element_type =>'widget'} %>
	
	<span style="display:none" id="is_edition" data-value="false"></span>	
	
	
	<script src="/javascript/widgets_form.js"></script>
<% end %>
