   def remove_outliers
      begin
         wikipediator = Wikipediator.new
         #terms = ["John Elliot Drinkwater Bethune", "Life of Galileo", "Experimental Philosophy","Life","Kepler","Galileo Galilei"]

         terms = Report.where(:id=>1225).first.taggable_tag_annotations.map{|annotation| annotation.tag.name}
                   
