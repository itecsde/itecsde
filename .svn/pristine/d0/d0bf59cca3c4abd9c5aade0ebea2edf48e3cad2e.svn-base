<% content_for :head do %>
	<%= render :partial => "header/header", :locals => {:element_active => 'bookmarks', :current_layout => "bookmarks"} %>
	<%= render :partial => "header/subheader", :locals => {:section_title => t('bookmarked_items'), :actions => "list_actions"} %>
<% end %>

