.about_box {
    position:relative;
    margin: 0 auto;
    margin-top:50px;
    -webkit-box-shadow: 2px 2px 5px 0px rgba(50, 50, 50, 0.5);
    -moz-box-shadow:    2px 2px 5px 0px rgba(50, 50, 50, 0.5);
    box-shadow:         2px 2px 5px 0px rgba(50, 50, 50, 0.5);
    /*-webkit-box-shadow: 0px 0px 20px 0px rgba(50, 50, 50, 0.75);
    -moz-box-shadow:    0px 0px 20px 0px rgba(50, 50, 50, 0.75);
    box-shadow:         0px 0px 20px 0px rgba(50, 50, 50, 0.75);*/
    width:700px;
    height:400px;
    background-color:#FFFFFF;
}

.about_box .left_column_about_box{
  float:left;
  width:250px;
  height:inherit;
  position:relative;
}

.about_box .separate_columns{
  float:left;
  -webkit-box-shadow: 0px 0px 1px 0px rgba(50, 50, 50, 0.75);
  -moz-box-shadow:    0px 0px 1px 0px rgba(50, 50, 50, 0.75);
  box-shadow:         0px 0px 1px 0px rgba(50, 50, 50, 0.75);
  width:1px; 
  margin-top:20px;  
  height:360px;
}

.about_box .right_column_about_box {
  float:left;
  width:360px;
  height:inherit;
  position:relative;
  padding-left:50px;
}

.about_box .left_column_about_box .logo_image_public{
    position: absolute;
    left: 30px;
    top: 140px;
}


.about_box .left_column_about_box  h1.logo_title_public{
    position: absolute;
    top: 200px;
    left:50px;
    font-family: "Trebuchet MS", Helvetica Neue, Helvetica, Arial, sans-serif;
    color: #2C2338;
    z-index: 1;
    font-size: 40px;    
}

.right_column_about_box .prompt{
  margin-top:50px;
  margin-bottom:20px;
  font-size:26px;
  font-weight:bold;
  font-family:"Arial";
  color: #2C2338;
}


.about_box_container .field_prompt {
    font-weight:bold;
    font-family:"Arial";
    font-size:15px;
    color: #2C2338;
    margin-bottom:5px;
}

.about_box_container .contact_email {
  margin-top:80px;
  font-size:16px;
  font-weight:bold;

}

.about_box_container .contact_email .logo_email{
  color:#433A4A;
  font-size:35px;
}
.about_box_container .contact_email .email {
  margin-left:25px;
}

.about_box_container .logo_uvigo {    
  margin-top:140px;
}
