   def document_to_text(document)
     text = "a a "    
     document.taggable_tag_annotations.each do |annotation|
        (annotation.weight*10).ceil.times do 
            text += " " + Util.to_hashtag(annotation.tag.name)
        end
     end
     
     #puts "*********************"
     #puts text
     #puts "*********************"
     
     return text
   end
   
