         end
         annotations.each do |wikitopic|
            wikitopics << {:name =>wikitopic.tag.name, :weight => wikitopic.weight, :wikipedia_article_id => wikitopic.wikipedia_article_id}
         end
         puts report.id
         begin
            if method == "basic"
               section = classify_it(wikitopics, sections, wikipediator_ip)
