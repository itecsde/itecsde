  def tag_list_with_links
    list_tags = ""
    self.taggable_tag_annotations.where(:type_tag => ["automatic", "automatic_from_human"]).map{ |taggable_tag_annotation| taggable_tag_annotation.tag}.each do |tag|        
      if list_tags.size > 0 && tag.name != nil
        list_tags += ", " + ActionController::Base.helpers.link_to(Util.to_hashtag(tag.name) , Rails.application.routes.url_helpers.search_results_path(:search => Util.to_hashtag(tag.name))) 
      elsif tag.name != nil
        list_tags += ActionController::Base.helpers.link_to(Util.to_hashtag(tag.name) , Rails.application.routes.url_helpers.search_results_path(:search => Util.to_hashtag(tag.name)))
      end        
    end
    return list_tags    
  end
  
  
  
  
