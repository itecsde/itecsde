<div class= "paginate_controls">
	<%= paginate @scenarios,:remote => true, :param_name => "scenarios_page" %>
</div>

<% if current_user != nil && @scenarios.first_page? %>
	<% if current_layout == "popup" %>
		<a class="extract_box popup_new_scenario_box new_extract_box" onclick="">+</a>
	<% else %>
		<%= link_to "+", new_scenario_path, html_options = {:class => "extract_box new_extract_box"} %>
	<% end %>	
<% end %>

<% @scenarios.each do |scenario| %>
	<%= render :partial => "elements/element", :locals => {:element => scenario, :current_layout => current_layout} %>
<% end %>

